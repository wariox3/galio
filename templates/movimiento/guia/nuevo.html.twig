{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form,{'attr':{'class' : 'form-horizontal'}}) }}
    <div class="content mt-3" style="margin-bottom: 15px;">
        <div class="card">
            <div class="card-header">
                Información general
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-2">
                        <div class="input-group">
                            <label for="txtCodigoCliente" class="col-sm-6 badge">Destinatario:</label>
                            {{ form_widget(form.codigoDestinatarioFk) }}
                        </div>
                    </div>
                    <div class="col-lg-10">
                        <div class="input-group">
                            <input id="txtNombreCorto" name="txtNombreCorto" type="text" class="form-control"
                                   value="" readOnly="ReadOnly"/>
                            <span class="input-group-btn">
                                <a class="btn btn-secondary" href="Javascript:abrirVentana3('{{ path('buscar_destinatario_lista',{'campoCodigo':'guia_codigoDestinatarioFk','campoNombre' : 'txtNombreCorto'}) }}','buscarDestinatario',550,1000)" role="button">Buscar</a>
                            </span>
                        </div>
                    </div>
                </div>
                <hr>
                <br>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="input-group">
                            <label for="" class="col-sm-2 badge">Remitente:</label>
                            {{ form_widget(form.remitente) }}
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="input-group">
                            <label for="" class="col-sm-2 badge">Producto:</label>
                            {{ form_widget(form.productoRel) }}
                        </div>
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col-sm-6">
                    </div>
                    <div class="col-sm-6">
                        <div class="input-group">
                            <label for="" class="col-sm-2 badge">Producto(REF):</label>
                            {{ form_widget(form.productoReferencia) }}
                        </div>
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="input-group">
                            <label for="" class="col-sm-2 badge">Destinatario:</label>
                            {{ form_widget(form.destinatarioNombre) }}
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="input-group">
                            <label for="" class="col-sm-2 badge">Identificación:</label>
                            {{ form_widget(form.destinatarioIdentificacion) }}
                        </div>
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="input-group">
                            <label for="" class="col-sm-2 badge">Dirección:</label>
                            {{ form_widget(form.destinatarioDireccion) }}
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="input-group">
                            <label for="" class="col-sm-2 badge">Documento:</label>
                            {{ form_widget(form.clienteDocumento) }}
                        </div>
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="input-group">
                            <label for="" class="col-sm-2 badge">Unidades:</label>
                            {{ form_widget(form.unidades) }}
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="input-group">
                            <label for="" class="col-sm-2 badge">Destino:</label>
                            {{ form_widget(form.ciudadDestinoRel) }}
                        </div>
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="input-group">
                            <label for="" class="col-sm-2 badge">Flete:</label>
                            <div class="col-sm-2" style="padding-left: 0px;">
                                {{ form_widget(form.vrFlete) }}
                            </div>
                            <label for="" class="col-sm-2 badge">Manejo:</label>
                            <div class="col-sm-2" style="padding-left: 0px;">
                                {{ form_widget(form.vrManejo) }}
                            </div>
                            <label for="" class="col-sm-2 badge">Declara:</label>
                            <div class="col-sm-2" style="padding-left: 0px;padding-right: 0px;">
                                {{ form_widget(form.vrDeclara) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="input-group">
                            <label for="" class="col-sm-2 badge">Peso:</label>
                            <div class="col-sm-3" style="padding-left: 0px;">
                                {{ form_widget(form.pesoReal) }}
                            </div>
                            <label for="" class="col-sm-2"></label>
                            <label for="" class="col-sm-2 badge">Volumen:</label>
                            <div class="col-sm-3" style="padding-right: 0px;">
                                {{ form_widget(form.pesoVolumen) }}
                            </div>
                        </div>
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="input-group">
                            <label for="" class="col-sm-1 badge">Comentario:</label>
                            {{ form_widget(form.comentario) }}
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="row float-right" style="margin-right: 0px;">
            <a href="{{ path('movimiento_guia_lista') }}" class="btn btn-sm btn-secondary">Cancelar</a>
            &nbsp;
            {{ form_widget(form.guardar) }}
        </div>
    </div>
    {{ form_end(form) }}
    <style type="text/css">
        .badge {
            text-align: left;
            padding-top: 10px;
        }
    </style>
{% endblock %}