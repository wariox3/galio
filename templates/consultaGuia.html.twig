{% extends 'base.html.twig' %}
{% block content %}

    <!-- Contact -->
    <section id="contact" class="home-section bg-white">
        <div class="container">
            <div class="row">
                <div class="col-md-offset-2 col-md-8">
                    <div class="section-heading">
                        <h2>Localizador</h2>
                        <p>Servicio para el rastreo de envios</p>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-offset-2 col-md-8">
                    <div id="sendmessage">Your message has been sent. Thank you!</div>
                    <div id="errormessage"></div>
                    {{ form_start(form, { 'attr': {'class': 'contactForm'} }) }}
                        <div class="form-group">
                            {{ form_widget(form.TxtGuia, { 'attr': {'class': 'form-control', 'placeholder':"Digite la guia"} }) }}
                            <div class="validation"></div>
                        </div>

                        <div class="text-center">{{ form_widget(form.BtnBuscar, { 'attr': {'class': 'btn btn-theme btn-lg btn-block'} }) }} </div>
                    {{ form_end(form) }}
                </div>
            </div>
            <br/>
            <div class="row">
                <div class="col-md-offset-2 col-md-8">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        {% if arrEstados != null %}
                            <tr>
                                <th>GUIA</th>
                                <th colspan="2">{{ arrEstados.codigoGuia  }}</th>
                            </tr>
                            <tr>
                                <th>DOCUMENTO</th>
                                <th colspan="2">{{ arrEstados.documentoCliente }}</th>
                            </tr>
                        {% endif %}
                        <tr>
                            <th>ESTADO</th>
                            <th>VALOR</th>
                            <th>FECHA</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% if arrEstados != null %}
                            <tr>
                                <td>Embarcado</td>
                                <td>{{ arrEstados.embarcado?'SI':'NO' }}</td>
                                <td>...</td>
                            </tr>
                            <tr>
                                <td>Despachado</td>
                                <td>{{ arrEstados.despachado?'SI':'NO' }}</td>
                                <td>{% if arrEstados.fechaDespachado != null %}{{ arrEstados.fechaCumplido | date('Y-m-d') }}{% endif %}</td>
                            </tr>
                            <tr>
                                <td>Entregado</td>
                                <td>{{ arrEstados.entregado?'SI':'NO' }}</td>
                                <td>{% if arrEstados.fechaEntregado != null %}{{ arrEstados.fechaCumplido | date('Y-m-d') }}{% endif %}</td>
                            </tr>
                            <tr>
                                <td>Soporte</td>
                                <td>{{ arrEstados.soporte?'SI':'NO' }}</td>
                                <td>{% if arrEstados.fechaSoporte != null %}{{ arrEstados.fechaCumplido | date('Y-m-d') }}{% endif %}</td>
                            </tr>
                            <tr>
                                <td>Cumplido</td>
                                <td>{{ arrEstados.cumplido?'SI':'NO' }}</td>
                                <td>{% if arrEstados.fechaCumplido != null %}{{ arrEstados.fechaCumplido | date('Y-m-d') }}{% endif %}</td>
                            </tr>
                            <tr>
                                <td>Novedad</td>
                                <td>{{ arrEstados.novedad?'SI':'NO' }}</td>
                                <td>...</td>
                            </tr>
                        {% endif %}
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="row mar-top30 ">
                <div class="col-md-offset-2 col-md-8">
                    <h5>We're on social networks</h5>
                    <ul class="social-network">
                        <li><a href="#">
						<span class="fa-stack fa-2x">
							<i class="fa fa-circle fa-stack-2x"></i>
							<i class="fa fa-facebook fa-stack-1x fa-inverse"></i>
						</span></a>
                        </li>
                        <li><a href="#">
						<span class="fa-stack fa-2x">
							<i class="fa fa-circle fa-stack-2x"></i>
							<i class="fa fa-dribbble fa-stack-1x fa-inverse"></i>
						</span></a>
                        </li>
                        <li><a href="#">
						<span class="fa-stack fa-2x">
							<i class="fa fa-circle fa-stack-2x"></i>
							<i class="fa fa-twitter fa-stack-1x fa-inverse"></i>
						</span></a>
                        </li>
                        <li><a href="#">
						<span class="fa-stack fa-2x">
							<i class="fa fa-circle fa-stack-2x"></i>
							<i class="fa fa-pinterest fa-stack-1x fa-inverse"></i>
						</span></a>
                        </li>
                    </ul>
                </div>
            </div>

        </div>
    </section>
{% endblock %}
